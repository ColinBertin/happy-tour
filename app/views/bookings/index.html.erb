<div class="container">
  <h1 class="mt-4 mb-4">My bookings</h1>
  <% if @bookings.length == 0 %>
    <h2>No bookings yet</h2>
  <% else %>
    <% @bookings.each do |booking| %>
      <div class="card-no-hover mb-4 p-4 border border-primary border-2">
        <div class="ms-4 card-product-infos">
          <h2><%= booking.tour.name %></h2>
          <p>Your booking time: <%= booking.schedule %></p>
          <p><%= booking.tour.content %></p>
          <p><%= booking.user.first_name %></p>
          <p>Booking status : <span class="<%= booking.confirmation == 'confirmed' ? "text-success" : "text-warning" %>"><%= booking.confirmation %></span></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
