<div class="container">
  <div class="row">
    <div class="col-lg-6" id="top-div">
      <h1 class="mt-4 mb-4"><strong><%= @tours.length %></strong> HappyTours are Available</h1>
      <% @tours.each do |tour| %>
        <%= render "tours/tour", tour: tour %>
      <% end %>
    </div>
    <div class="col-lg-6 mt-5" id="map">
      <div class="index-right" style="width: 100%; height: 100vh;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
